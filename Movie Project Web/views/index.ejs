<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie Project</title>
    <link rel="stylesheet" href="index.css" />

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        
      }

      header {
        width: 100%;
        height: 80px;
        /* border: 1px solid; */
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #fff;
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
      }

      .Logo {
        flex-basis: 10%;
        height: 80px;
        /* border: 1px solid; */
        font-family: "Pacifico", cursive;
        margin-left: 50px;
      }

      .Logo h1{
        color: #EF9912;
        text-align: center;
        cursor: pointer;
        /* margin-top: -5px; */
      }

      .Logo p{
        font-family: "Playwrite CU", cursive;
        font-size: 10px;
        text-align: center;
        color: #000;
        margin-top: -10px;
      }

      nav{
        flex-basis: 40%;
        height: 80px;
        /* border: 1px solid; */
      }

      nav ul{
        height: 80px;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
      }

      nav ul li {
        list-style: none;
      }

      nav ul li a{
        text-decoration: none;
        font-family: "Rubik", sans-serif;
        color: #000;
        transition: .5s;
      }

      nav ul li a:hover{
        opacity: 0.6;
        transition: .5s;
      }

      .Header-button{
        width: 15%;
        height: 80px;
        /* border: 1px solid; */
        display: flex;
        justify-content: space-evenly;
        align-items: center;
      }

      .Header-button button{
        width: 150px;
        height: 50px;
        background-color: #EF9912;
        color: #fff;
        border: none;
        border-radius: 10px;
        font-size: 17px;
        transition: .5s;
        cursor: pointer;
      }

      .Header-button button:hover{
        opacity: 0.9;
        transition: .5s;
        letter-spacing: 2.5px;
      }

      .movie-poster img{
        width: 90%;
        margin-top: 20px;
        margin-left: 5%;
        cursor: pointer;
      }
      
      .movie-title{
        font-family: "Rubik", sans-serif;
        margin-left: 5%;
        margin-top: 20px;
      }

      .movie-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 30px;
}

.movie-card {
  width: 280px;
  background-color: #fff;
  box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 20px;
  border-radius: 10px;
  overflow: hidden;
  margin-bottom: 40px;
  transition: transform 0.3s, box-shadow 0.3s;
}

.movie-card:hover {
  transform: scale(1.05);
  box-shadow: rgba(0, 0, 0, 0.2) 0px 15px 25px;
}

.movie-card img {
  width: 100%;
  height: 400px;
  object-fit: cover;
}

.movie-info {
  padding: 20px;
}

.movie-info h2 {
  font-family: 'Rubik', sans-serif;
  font-size: 22px;
  color: #333;
  margin-bottom: 10px;
}

.movie-info p {
  font-family: 'Rubik', sans-serif;
  font-size: 14px;
  color: #666;
  margin: 5px 0;
}

.movie-info a {
  text-decoration: none;
}

.movie-info button {
  padding: 10px 15px;
  background-color: #EF9912;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
  margin-right: 10px;
  font-size: 14px;
}

.movie-info button:hover {
  background-color: #d27900;
}

    </style>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet"/>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+CU:wght@100..400&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
    <!-- Google Fonts -->

    <!-- Remix Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css" integrity="sha512-OQDNdI5rpnZ0BRhhJc+btbbtnxaj+LdQFeh0V9/igiEPDiWE2fG+ZsXl0JEH+bjXKPJ3zcXqNyP4/F/NegVdZg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Remix Icon -->
  </head>
  <body>
    <header>
      <div class="Logo">
        <h1>Cinema <p>Movie Booking</p></h1> 
      </div>
      <nav>
        <ul>
            <li>
                <a href=""><i class="ri-movie-2-line" style="margin-right: 5px;"></i> Movie</a>
            </li>
            <li>
                <a href=""><i class="ri-movie-line" style="margin-right: 5px;"></i> Stream</a>
            </li>
            <li>
                <a href=""><i class="ri-medal-line" style="margin-right: 5px;"></i> Event</a>
            </li>
            <li>
                <a href=""><i class="ri-map-pin-line" style="margin-right: 5px;"></i> Plays</a>
            </li>
            <li>
                <a href=""><i class="ri-basketball-line" style="margin-right: 5px;"></i> Sports</a>
            </li>
            <li>
                <a href=""><i class="ri-brain-line" style="margin-right: 5px;"></i> Activities</a>
            </li>
        </ul>
      </nav>
      <div class="Header-button">
        <a href="/AddMovie">
            <button class="btn"><i class="ri-add-line"></i> Add Movie</button>
        </a>
      </div>
    </header>

    <section>
        <div class="movie-poster">
            <img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1725276118866_cherryblossom1240x300.jpg" alt="">
        </div>
    </section>

    <section>
      <h1 class="movie-title">Recommended Movies</h1>
      <div class="movie-list">
        <% MovieData.map((movie, i) => { %>
          <div class="movie-card">
            <img src="<%= movie.image %>"/>
            <div class="movie-info">
                <h2><%= movie.title %></h2>
              <p>Genres: <%= movie.genres %></p>
              <p>Language: <%= movie.language %></p>
              <p>Director: <%= movie.director %></p>
              <p>Writers: <%= movie.writers %></p>
              <p>Country: <%= movie.country %></p>
              <p>Date: <%= movie.date %></p>
              <a href="/deleteMovie?id=<%=movie.id%>">
                <button>Delete</button>
              </a>
              <a href="/editMovie?id=<%=movie.id%>">
                <button>Edit</button>
              </a>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
    
  </body>
</html>
